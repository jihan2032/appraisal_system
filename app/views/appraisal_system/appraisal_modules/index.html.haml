.page-head
  .page-title
    %h1
      All Appraisal Modules
      %small List of all modules
.portlet.box.red
  .portlet-title
    .caption
      %i.fa.fa-briefcase
      Modules
    .actions
      = link_to new_appraisal_module_path, class: 'btn btn-default btn-sm' do
        %i.fa.fa-plus
        Add
  .portlet-body
    - if @modules.any?
      %table.table.table-striped.table-advance.table-hover
        %thead
          %tr
            %th
              Name
            %th
              Description
            %th
        %tbody
          - @modules.each do |appraisal_module|
            %tr
              %td
                = link_to appraisal_module.name, appraisal_module_path(appraisal_module)
              %td
                = appraisal_module.description
              %td.text-right
                .btn-group.pull-right
                  %button.btn.btn-sm.blue.dropdown-toggle{type: "button", data: { toggle: "dropdown" }}
                    Actions
                    %i.fa.fa-angle-down
                  %ul.dropdown-menu.pull-right{role: "menu"}
                    %li
                      = link_to appraisal_module_path(appraisal_module) do
                        %i.fa.fa-eye
                        Show
                    %li
                      = link_to edit_appraisal_module_path(appraisal_module) do
                        %i.fa.fa-edit
                        Edit
                    %li
                      = link_to appraisal_module_path(appraisal_module), method: :delete, data: { confirm: "Are you sure?" } do
                        %i.fa.fa-trash
                        Delete
    - else
      No modules created yet

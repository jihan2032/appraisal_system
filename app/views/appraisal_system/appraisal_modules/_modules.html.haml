.portlet.box.red
  .portlet-title
    .caption
      %i.fa.fa-briefcase
      ="#{@appraisal_module.name} Competences"
    .actions
      = link_to new_appraisal_module_competence_path(@appraisal_module), class: 'btn btn-default btn-sm' do
        %i.fa.fa-plus
        Add
  .portlet-body
    %table.table.table-striped.table-advance.table-hover
      %thead
        %tr
          %th
            Title
          %th
            Description
          %th
            Helping Description
          %th
      %tbody
        - if @competences.any?
          - @competences.each do |competence|
            %tr
              %td
                = link_to competence.title, edit_appraisal_module_competence_path(@appraisal_module, competence)
              %td
                = competence.description
              %td
                = competence.description
              %td.text-right
                .btn-group.pull-right
                  %button.btn.btn-sm.blue.dropdown-toggle{data: { toggle: "dropdown" }}
                    Actions
                    %i.fa.fa-angle-down
                  %ul.dropdown-menu{role: "menu"}
                    %li
                      = link_to edit_appraisal_module_competence_path(@appraisal_module, competence) do
                        %i.fa.fa-edit
                        Edit
                    %li
                      = link_to appraisal_module_competence_path(@appraisal_module), method: :delete, data: { confirm: "Are you sure?" } do
                        %i.fa.fa-trash
                        Delete
        - else
          %tr
            %td{colspan: 9}
              No competences added to this appraisal module yet!
